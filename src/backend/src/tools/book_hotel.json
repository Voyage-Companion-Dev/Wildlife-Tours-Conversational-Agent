{
  "type": "function",
  "function": {
    "name": "book_hotel",
    "description": "Handles accommodation booking near parks or reserves.",
    "parameters": {
      "type": "object",
      "properties": {
        "location": {
          "type": "string",
          "description": "Hotel location or lodge name."
        },
        "check_in": {
          "type": "string",
          "description": "Check‑in date (YYYY‑MM‑DD)."
        },
        "check_out": {
          "type": "string",
          "description": "Check‑out date (YYYY‑MM‑DD)."
        },
        "rooms": {
          "type": "integer",
          "description": "Number of rooms to book."
        },
        "language": {
          "type": "string",
          "enum": ["en", "fr"],
          "description": "Response language code."
        }
      },
      "required": ["location", "check_in", "check_out", "rooms"]
    }
  }
}
